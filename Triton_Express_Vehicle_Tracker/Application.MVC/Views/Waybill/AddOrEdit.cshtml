@model Application.MVC.Models.WaybillViewModel

@{
    /**/

    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center><h2 class="alert-success" style="font-family:'Comic Sans MS';">Waybill Entry Form</h2></center>
<br />
<br />
<div class="card">
    <div class="card-header"></div>
    @using (Html.BeginForm())
    {

        @Html.HiddenFor(model => model.WaybillId)

        <div class="card-body">
            <div class="form-group-lg">
                <label>Parcel weight</label>
                @Html.TextBoxFor(model => model.Waybill_Total_weight, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Waybill_Total_weight)
            </div>
            <div class="form-group-lg">
                <label>Number of parcels</label>
                @Html.TextBoxFor(model => model.Waybil_Total_Parcels_Allocated, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Waybil_Total_Parcels_Allocated)
            </div>
            <div class="form-group-lg">
                <label>Assign to Vehicle</label>
                <br />
                @Html.DropDownListFor(m => m.Vehicle_Registration_Number, (IEnumerable<SelectListItem>)ViewBag.listAuthers, "---Select---", new { @class = "form-control", id = "my_custom_id" })
                @Html.ValidationMessageFor(model => model.Vehicle_Registration_Number)
            </div>

        </div>
        <br />
        <br />
        <div class="card-footer" style="float:right;">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    }
</div>



@section scripts{
    @Scripts.Render("~/bundles/jqueryval");

    <script type="text/javascript">

        $(function () {
            $("#my_custom_id").chosen();
        });
    </script>
}

